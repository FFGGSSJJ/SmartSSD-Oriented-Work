{
    "name": "P2P Simple Example", 
    "description": [
        "This is simple example of vector increment to describe P2P between FPGA and NVMe SSD."
    ],
    "flow": "vitis",
    "keywords": [
        "XCL_MEM_EXT_P2P_BUFFER",
        "pread",
        "pwrite", 
        "O_DIRECT",
        "O_RDWR"
    ],
    "key_concepts": [
        "P2P", 
        "NVMe SSD",
        "SmartSSD"
    ],
    "platform_type": "pcie",
    "os": [
        "Linux"
    ],
    "platform_blacklist": [
        "zc",
        "u25_",
        "u30",
        "vck",
        "aws-vu9p-f1",
        "201910",
        "u50_gen3x16_xdma_2019"
    ],
     "runtime": [
        "OpenCL"
    ],
    "config_make": "config.mk",
    "launch": [
        {
            "cmd_args": "-x BUILD/adder.xclbin -f PROJECT/data/sample.txt", 
            "name": "generic launch for all flows"
        }
    ], 
    "host": {
        "host_exe": "p2p_simple",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "REPO_DIR/common/includes/cmdparser/cmdlineparser.cpp",
                "REPO_DIR/common/includes/logger/logger.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2",
                "REPO_DIR/common/includes/cmdparser",
                "REPO_DIR/common/includes/logger"
            ]
        }
    },  
    "containers": [
        {
            "accelerators": [
                {
                    "name": "adder", 
                    "location": "src/adder.cpp"                    
                }
            ], 
            "name": "adder",
            "ldclflags": "--config PROJECT/adder.cfg"
        }
    ],
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "profile": "no",
        "features": [
            "p2p"
        ],
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
